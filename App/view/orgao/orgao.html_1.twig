<!--modal colaboradores-->

<div id="um" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Orgão de Atendimento</h3>
    </div>

        <form class="form-horizontal" method="post" action="/orgao/edite">
            <fieldset>
                <!-- Text input-->
                <div class="control-group">
                    <br>
                    <br>
                    <div class="controls">
                        <input id="id" name="id" placeholder="do Orgão" class="input-xlarge" type="hidden"  value="{{res.id}}">
                        
                    </div>
                    <br>
                    <label class="control-label">Nome</label>
                    <div class="controls">
                        <input id="orgao" name="nome" placeholder="do Orgão" class="input-xlarge" type="text" value="{{res.nome}}">
                        
                    </div>
                    
                </div>
            </fieldset>
            <div class="modal-footer">
               
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button type="submit" class="btn btn-success">Gravar</button>
                 
                </div>

            </form>
        

        </div>
    </div>
